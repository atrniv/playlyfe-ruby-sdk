<div class="container">
<div class="form-signin">
<%= form_tag(controller: "welcome", action: "login", method: "post") do %>
  <h2 class="form-signin-heading">
  Please sign in
  </h2>
  <%= text_field_tag :username, nil, placeholder: "Your Player Id", class: "form-control" %>
  <%= password_field_tag :password, nil, placeholder: "Your supersecret password", class: "form-control"%>
  <br>
  <%= submit_tag "Login", class: "btn btn-lg btn-primary btn-block"%>
<% end %>
</div>
</div>
